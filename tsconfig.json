{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "module": "commonjs",
    "target": "es6",
    "alwaysStrict": true,
    "jsx": "react",
    "lib": [
        "dom",
        "dom.iterable",
        "scripthost",
        "esnext",
        "esnext.array",
        "esnext.asynciterable",
        "es7",
        "es6",
        "es2015.symbol",
        "es2015.symbol.wellknown"
    ]
  },
  "include": [
     "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}